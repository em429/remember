<%# Book Form Component %>
<%# book:: expected to be a new or existing Book instance %>
<div class="flex flex-wrap nice-form">
  <%= form_with model: book do |f| %>

    <div class="flex justify-between gap-2">
      <div class="w-full">
        <%= f.label :epub, "Epub File", class: "" %>
        <%= f.file_field :epub %>
      </div>
      
      <div class="w-full">
        <%= f.label :cover, class: "block" %>
        <%= f.file_field :cover %>
      </div>
    </div>

    <div class="flex justify-between gap-2">
      <div class="w-full">
        <%= f.label :title, class: "block" %>
        <%= f.text_field :title %>
      </div>

      <div class="w-full">
        <%= f.label :author, class: "block" %>
        <%= f.text_field :author %>
      </div>
    </div>

    <%= f.label :fiction, "Fiction or Non-Fiction?", class: "block" %>
    <%= f.select :fiction, {"Non-Fiction": false, "Fiction": true } %>
    
    <%= f.submit "Add Book", class: "btn-lg" %>
  <% end %>
</div>
