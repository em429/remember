 <nav class="flex items-center text-xl justify-between">
    <div class="space-x-8 font-bold">
      <%= nav_link_to "All", annotations_path %>

      <span class="space-x-1">
        <%= nav_link_to "Due", annotations_path(mode: "flashcards_due") %>
